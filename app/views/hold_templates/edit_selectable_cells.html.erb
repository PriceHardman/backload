<h2>Highlight the cells that you wish to be selectable on all future load plans for this vessel, and click submit when finished.</h2>

<%= link_to 'Edit Hold Information', edit_hold_template_path(@hold_template) %><br/>
<%= link_to 'Back To List of Vessel Templates', hold_templates_path %><br/>

<%= form_for @hold_template,
             :url => {:action => 'update_selectable_cells'},
             :html => {:id => 'update_selectable_cells_form', :'data-type' => 'json'} do |f| %>
    <%= hidden_field_tag "selectable_cells", nil, :id => "update_selectable_cells_field" %>
    <%= f.submit "Update Selectable Cells" %>
<% end %>

<%= render "shared/hold_grid", :model => @hold_template %>